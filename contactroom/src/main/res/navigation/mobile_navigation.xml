<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_call">

    <fragment
        android:id="@+id/navigation_call"
        android:name="com.example.contactroom.ui.call.CallFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_call">
        <action
            android:id="@+id/action_navigation_call_to_navigation_contact_detail"
            app:destination="@id/navigation_contact_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.example.contactroom.ui.collection.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_collect"
        android:name="com.example.contactroom.ui.contacts.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_contact_detail"
        android:name="com.example.contactroom.ui.call.CallDetailFragment"
        tools:layout="@layout/fragment_notifications" />
</navigation>